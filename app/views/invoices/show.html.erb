<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <form>
      <div class="form-group">
        <label>Number:</label>
        <div class="form-control"><%= @invoice.number %></div>
      </div>
      <div class="form-group">
        <label>Amount:</label>
        <div class="form-control readonly"><%= @invoice.gbp_amount %></div> In GBP
      </div>
      <div class="form-group">
        <label>To Address:</label>
        <div class="form-control"><%= @invoice.to_address %></div>
      </div>
      <div class="form-group">
        <label>From Address:</label>
        <div class="form-control"><%= @invoice.from_address %></div>
      </div>
      <div class="form-group">
        <label>Note:</label>
        <div class="form-control"><%= @invoice.note %></div>
      </div>
      <div class="form-group">
        <label>Created By:</label>
        <div class="form-control"><%= @invoice.user.email %></div>
      </div>
    </form>
  </div>
</div>