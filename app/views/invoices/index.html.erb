
<h4>All Invoices</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th>Amount</th>
      <th>GBP Amount</th>
      <th>To address</th>
      <th>From address</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.number %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.gbp_amount %></td>
        <td><%= invoice.to_address %></td>
        <td><%= invoice.from_address %></td>
        <td><%= link_to 'Pay', new_payment_path(invoice_id: invoice.id) %> |
          <%= link_to 'Payments', payments_path(invoice_id: invoice.id) %> |
          <%= link_to 'Show', invoice %> |
          <%= link_to 'Edit', edit_invoice_path(invoice) %> |
          <%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to ' + New Invoice', new_invoice_path, class: 'btn btn-primary' %>
