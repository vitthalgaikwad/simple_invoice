<p id="notice"><%= notice %></p>

<h4>Payments</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.invoice_id %></td>
        <td><%= payment.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
